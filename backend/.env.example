# BrainSAIT Healthcare Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_TYPE=sqlite  # or 'postgres'
DB_HOST=localhost
DB_PORT=5433
DB_NAME=brainsait_healthcare
DB_USER=brainsait_admin
DB_PASS=brainsait_healthcare_2025!

# Security Configuration
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Twilio Communication Configuration
# Required for SMS, Voice, and Video communication features
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number in E.164 format

# Twilio Video Configuration (Optional - for video consultations)
TWILIO_VIDEO_API_KEY=your_twilio_video_api_key_here
TWILIO_VIDEO_API_SECRET=your_twilio_video_api_secret_here

# Twilio Webhook Security (Optional but recommended)
TWILIO_WEBHOOK_SECRET=your_webhook_secret_for_signature_validation

# Example Saudi Arabia phone number format for testing
# Use +966 for Saudi Arabia country code
# Example: +966501234567