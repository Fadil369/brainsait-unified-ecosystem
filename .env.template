# Development/Testing Only - Remove in Production
DEV_SEED_DATA=true
DEV_SAMPLE_USERS=true
DISABLE_AUTH_FOR_TESTING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=CHANGE_ME_BACKUP_ENCRYPTION_KEY

# Notification Configuration
NOTIFICATION_EMAIL_FROM=notifications@brainsait.com
NOTIFICATION_EMAIL_HOST=smtp.brainsait.com
NOTIFICATION_EMAIL_PORT=587
NOTIFICATION_EMAIL_USER=CHANGE_ME_EMAIL_USER
NOTIFICATION_EMAIL_PASSWORD=CHANGE_ME_EMAIL_PASSWORD

# Arabic Language Support
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
ENABLE_RTL_SUPPORT=true

# Performance Tuning
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
REDIS_CONNECTION_POOL_SIZE=50
API_TIMEOUT_SECONDS=30
MAX_REQUEST_SIZE_MB=10
