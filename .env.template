# BrainSAIT Healthcare Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# SECURITY WARNING:
# - Never commit .env files with real credentials to version control
# - Use strong, unique passwords for production environments
# - Rotate secrets regularly
# - Use environment-specific configurations
# =============================================================================

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Compose Configuration
COMPOSE_PROJECT_NAME=brainsait-healthcare
RESTART_POLICY=unless-stopped

# Database Configuration - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brainsait_healthcare
DB_USER=brainsait_admin
# SECURITY: Use strong passwords (min 12 chars, mixed case, numbers, symbols)
DB_PASS=CHANGE_ME_STRONG_PASSWORD_HERE
DB_EXTERNAL_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_MAX_MEMORY=256mb
REDIS_EXTERNAL_PORT=6379

# Application Security
# SECURITY: Generate strong secret key for JWT tokens and encryption
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY_HERE
JWT_SECRET_KEY=CHANGE_ME_GENERATE_JWT_SECRET_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
# SECURITY: Restrict origins in production, never use * in production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# API Keys and External Services
# SECURITY: Keep these secret, use different keys for dev/staging/prod
NPHIES_CLIENT_ID=CHANGE_ME_NPHIES_CLIENT_ID
NPHIES_CLIENT_SECRET=CHANGE_ME_NPHIES_CLIENT_SECRET
NPHIES_BASE_URL=https://api.nphies.sa
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_ENVIRONMENT=development
VITE_DEBUG=true
FRONTEND_EXTERNAL_PORT=5173
FRONTEND_INTERNAL_PORT=80

# Backend Configuration
BACKEND_EXTERNAL_PORT=8000

# Database Administration (pgAdmin)
PGADMIN_EMAIL=admin@brainsait.com
PGADMIN_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD
PGADMIN_EXTERNAL_PORT=5050

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_REAL_TIME=true
ENABLE_HEALTH_CHECKS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=365

# Healthcare Compliance
ENABLE_PDPL_COMPLIANCE=true
ENABLE_HIPAA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years for healthcare data

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
ENABLE_HTTPS_REDIRECT=false

