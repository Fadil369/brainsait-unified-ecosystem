#=============================================================================
# BrainSAIT Healthcare Platform - Development Environment Configuration
# Unified environment variables for development deployment
#=============================================================================

# Project Configuration
COMPOSE_PROJECT_NAME=brainsait-healthcare-dev
ENVIRONMENT=development

# Service Restart Policy
RESTART_POLICY=unless-stopped

# Database Configuration (Unified)
DB_NAME=brainsait_healthcare
DB_USER=brainsait_admin
DB_PASS=brainsait_healthcare_2025!
DB_LOCALE=en_US.UTF-8
DB_EXTERNAL_PORT=5432

# Redis Configuration
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
REDIS_EXTERNAL_PORT=6379

# Backend Configuration
BACKEND_EXTERNAL_PORT=8000
BACKEND_VOLUME_TYPE=bind
BACKEND_VOLUME_SOURCE=./backend
BACKEND_VOLUME_READONLY=false
BACKEND_COMMAND=uvicorn main:app --host 0.0.0.0 --port 8000 --reload --log-level debug

# Frontend Configuration
FRONTEND_DOCKERFILE=Dockerfile.dev
FRONTEND_EXTERNAL_PORT=5173
FRONTEND_INTERNAL_PORT=5173
FRONTEND_VOLUME_TYPE=bind
FRONTEND_VOLUME_SOURCE=./oid-portal
FRONTEND_VOLUME_CONSISTENCY=cached
FRONTEND_COMMAND=npm run dev -- --host 0.0.0.0

# Environment Variables
DEBUG=true
LOG_LEVEL=DEBUG  
SECRET_KEY=brainsait-dev-secret-key-2025
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# VITE Variables
VITE_API_URL=http://localhost:8000
VITE_DEV_MODE=true
VITE_DEBUG=true

# pgAdmin Configuration
PGADMIN_EMAIL=admin@brainsait.com
PGADMIN_PASSWORD=brainsait123
PGADMIN_EXTERNAL_PORT=5050

# Healthcare Integration (Development)
NPHIES_CLIENT_ID=dev_client_id
NPHIES_CLIENT_SECRET=dev_client_secret
OPENAI_API_KEY=

# Feature Flags
ENABLE_METRICS=true
ENABLE_REAL_TIME=true
ARABIC_SUPPORT=

# Version Configuration
POSTGRES_VERSION=15
REDIS_VERSION=7
NGINX_VERSION=alpine
PGADMIN_VERSION=latest