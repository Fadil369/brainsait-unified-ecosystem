{
  "name": "brainsait-healthcare-portal",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "BrainSAIT Healthcare Unification Platform - Arabic-First Healthcare Identity Management",
  "keywords": [
    "healthcare",
    "nphies",
    "oid",
    "arabic",
    "saudi-arabia",
    "rcm"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && npx vite-bundle-analyzer dist/stats.html",
    "build:prod": "NODE_ENV=production vite build --mode production",
    "build:pwa": "NODE_ENV=production PWA_ENABLED=true vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "preview": "vite preview",
    "preview:pwa": "vite preview --mode production",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "analyze": "npx vite-bundle-analyzer dist/stats.html",
    "performance": "npm run build:prod && npm run analyze",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "optimize": "npm run clean && npm install && npm run build:prod",
    "health-check": "npm audit && npm run lint && npm run test:coverage",
    "deploy:check": "npm run health-check && npm run build:pwa"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-charts": "^6.18.3",
    "@mui/x-data-grid": "^6.18.3",
    "@mui/x-date-pickers": "^6.18.3",
    "@types/react-window": "^1.8.8",
    "axios": "^1.6.2",
    "chart.js": "^4.5.0",
    "date-fns": "^2.30.0",
    "date-fns-jalali": "^2.13.0-0",
    "dompurify": "^3.2.6",
    "framer-motion": "^10.16.16",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^13.5.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.22.1",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "recharts": "^2.8.0",
    "stylis": "^4.3.6",
    "stylis-plugin-rtl": "^2.1.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "compression": "^1.8.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.0",
    "vite": "^7.0.6",
    "vite-bundle-analyzer": "^1.1.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
