# BrainSAIT Healthcare Platform - Production Environment Template
# Copy this file to .env and update the values for your production deployment

# =================
# Database Configuration
# =================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=brainsait_healthcare
DB_USER=brainsait_admin
# Generate a strong password: openssl rand -base64 32
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# =================
# Redis Configuration
# =================
REDIS_HOST=redis
REDIS_PORT=6379
# Generate a strong password: openssl rand -base64 32
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE

# =================
# Security Configuration
# =================
# Generate JWT secret: openssl rand -base64 64
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_HERE
# Generate encryption key: openssl rand -base64 32
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE

# =================
# Healthcare Compliance
# =================
PDPL_COMPLIANCE=true
HIPAA_COMPLIANCE=true
AUDIT_LOGGING=true
SECURITY_HEADERS=true
CSRF_PROTECTION=true

# =================
# Arabic RTL Support
# =================
ARABIC_SUPPORT=true
RTL_ENABLED=true
LANGUAGE_DEFAULT=ar

# =================
# NPHIES Integration (Saudi Healthcare)
# =================
NPHIES_CLIENT_ID=YOUR_NPHIES_CLIENT_ID
NPHIES_CLIENT_SECRET=YOUR_NPHIES_CLIENT_SECRET
NPHIES_BASE_URL=https://api.nphies.sa
NPHIES_ENVIRONMENT=production

# =================
# API Configuration
# =================
API_BASE_URL=https://your-domain.com/api
FRONTEND_URL=https://your-domain.com
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =================
# SSL and Domain Configuration
# =================
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com
ENABLE_HTTPS=true

# =================
# Application Settings
# =================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=10485760  # 10MB
SESSION_TIMEOUT=3600      # 1 hour

# =================
# Performance Configuration
# =================
WORKERS=2
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=30

# =================
# Backup Configuration
# =================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =================
# Monitoring and Alerts
# =================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
ALERTS_EMAIL=admin@your-domain.com

# =================
# Coolify Integration
# =================
COOLIFY_PROJECT=brainsait-healthcare
COOLIFY_STACK=healthcare-platform

# =================
# CORS Configuration
# =================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-CSRF-Token

# =================
# Rate Limiting
# =================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# =================
# File Storage
# =================
UPLOAD_PATH=/app/uploads
STATIC_PATH=/app/static
TEMP_PATH=/tmp
